@model Ashion.Models.EF.News
@{ 
    ViewBag.Title = "Chi tiết tin tức";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .news_section_container {
        margin-top: 50px;
    }

    .row-item-new {
        margin-bottom: 25px;
    }

    .title-news {
        font-size: 24px;
        border-bottom: 1px solid;
        padding: 10px 0;
        margin-bottom: 15px;
    }

    .img-box img {
        max-width: 100%;
        max-height: 100%;
    }
</style>
<div class="container news_section_container">
    @if (Model != null)
    {
        <div class="row">
            <div class="col-md-12">
                <h1 class="title-news">@Model.Title</h1>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                @Model.Description
            </div>
            <div class="col-md-12">
                @Html.Raw(Model.Detail)
            </div>
        </div>
    }
</div>



