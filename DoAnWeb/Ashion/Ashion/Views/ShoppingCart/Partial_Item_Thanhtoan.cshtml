@model IEnumerable<Ashion.Models.ShoppingCartItem>
@using Ashion.Common

@if (Model != null && Model.Any())
{
    <h3>
        Giỏ hàng 
        <span style="float:right;">@Model.Count()</span>
    </h3>
    var i = 0;
    var tongtien = decimal.Zero;
    <table class="table">
        @foreach (var item in Model)
        {
        tongtien += @item.TotalPrice;
        <tr>
            <td>@item.ProductName</td>
            <td>@Common.FormatNumber(item.Price)</td>
        </tr>
        }

    <tr>
        <td>Tổng tiền</td>
        <td>@Common.FormatNumber(tongtien,0)</td>
    </tr>
    </table>


}
else
{

}
