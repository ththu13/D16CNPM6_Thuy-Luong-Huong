@model IEnumerable<Ashion.Models.EF.Product>
    @using Ashion.Common
@if (Model != null && Model.Any())
{
    <section class="trend spad">
        <div class="container">
            <div class="row">
                <div class="col-lg-4 col-md-4 col-sm-6">
                    <div class="trend__content">
                        <div class="section-title">
                            <h4>Hot Trend</h4>
                        </div>
                        @foreach (var item in Model)
                        {
                            var strImge = "";
                            var img = item.ProductImage.FirstOrDefault(x => x.IsDefault);
                            if (img != null)
                            {
                                strImge = img.Image;
                            }
                            <div class="trend__item">
                                <div class="trend__item__pic">
                                    <img src="@strImge" alt="">
                                </div>
                                @if (item.PriceSale > 0)
                          {
                                    <div class="label sale">Sale</div>

                          }
                                <div class="trend__item__text">
                                    <h6>@item.Title</h6>
                                    <div class="rating">
                                        <i class="fa fa-star"></i>
                                        <i class="fa fa-star"></i>
                                        <i class="fa fa-star"></i>
                                        <i class="fa fa-star"></i>
                                        <i class="fa fa-star"></i>
                                    </div>
                                    @if (item.PriceSale > 0)
                                    {
                                        <div class="product__price">@Common.FormatNumber(item.PriceSale, 0)<span>>@Common.FormatNumber(item.Price, 0)</span></div>

                                    }
                                    else
                                    {
                                        <div class="product__price">@Common.FormatNumber(item.Price, 0)</div>
                                    }
                                </div>
                            </div>

                        }
                    </div>
                </div>
                <div class="col-lg-4 col-md-4 col-sm-6">
                    <div class="trend__content">
                        <div class="section-title">
                            <h4>Best seller</h4>
